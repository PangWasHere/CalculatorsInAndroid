<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StandardCalculatorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#DADADA"
        android:orientation="vertical">
        <TextView
            android:text=""
            android:id="@+id/TxtOperation"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="0"
            android:id="@+id/TxtCurrent"
            android:textSize="30sp"
            android:padding="5dp"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/BtnCE"
            android:text="CE"
            android:onClick="BtnSpecialOperatorClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="Widget.AppCompat.Button.Borderless"
            android:layout_margin="1dp"
            android:background="#E6E4E4" />
        <Button
            android:id="@+id/BtnC"
            android:text="C"
            android:onClick="BtnSpecialOperatorClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            style="Widget.AppCompat.Button.Borderless"
            android:layout_margin="1dp"
            android:background="#E6E4E4"/>
        <Button
            android:id="@+id/BtnDel"
            android:text="DEL"
            android:onClick="BtnSpecialOperatorClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="Widget.AppCompat.Button.Borderless"
            android:layout_margin="1dp"
            android:background="#E6E4E4"/>
        <Button
            android:id="@+id/BtnDivide"
            android:text="/"
            android:onClick="BtnOperatorClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="Widget.AppCompat.Button.Borderless"
            android:layout_margin="1dp"
            android:background="#E6E4E4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/Btn7"
            android:text="7"
            android:onClick="BtnNumberClick"
            android:textStyle="bold"
            style="Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#F7F4F4" />
        <Button
            android:id="@+id/Btn8"
            android:text="8"
            android:onClick="BtnNumberClick"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="Widget.AppCompat.Button.Borderless"
            android:layout_margin="2dp"
            android:background="#F7F4F4"/>
        <Button
            android:id="@+id/Btn9"
            android:text="9"
            android:onClick="BtnNumberClick"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="Widget.AppCompat.Button.Borderless"
            android:layout_margin="1dp"
            android:background="#F7F4F4"/>
        <Button
            android:id="@+id/BtnMultiply"
            android:text="x"
            android:onClick="BtnOperatorClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="Widget.AppCompat.Button.Borderless"
            android:layout_margin="2dp"
            android:background="#E6E4E4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/Btn4"
            android:text="4"
            android:onClick="BtnNumberClick"
            android:textStyle="bold"
            style="Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#F7F4F4" />
        <Button
            android:id="@+id/Btn5"
            android:text="5"
            android:onClick="BtnNumberClick"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="Widget.AppCompat.Button.Borderless"
            android:layout_margin="2dp"
            android:background="#F7F4F4"/>
        <Button
            android:id="@+id/Btn6"
            android:text="6"
            android:onClick="BtnNumberClick"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="Widget.AppCompat.Button.Borderless"
            android:layout_margin="2dp"
            android:background="#F7F4F4"/>
        <Button
            android:id="@+id/BtnSubtract"
            android:text="-"
            android:onClick="BtnOperatorClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="Widget.AppCompat.Button.Borderless"
            android:layout_margin="2dp"
            android:background="#E6E4E4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/Btn1"
            android:text="1"
            android:onClick="BtnNumberClick"
            android:textStyle="bold"
            style="Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#F7F4F4" />
        <Button
            android:id="@+id/Btn2"
            android:text="2"
            android:onClick="BtnNumberClick"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="Widget.AppCompat.Button.Borderless"
            android:background="#F7F4F4"/>
        <Button
            android:id="@+id/Btn3"
            android:text="3"
            android:onClick="BtnNumberClick"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="Widget.AppCompat.Button.Borderless"
            android:background="#F7F4F4"/>
        <Button
            android:id="@+id/BtnAdd"
            android:text="+"
            android:onClick="BtnOperatorClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="Widget.AppCompat.Button.Borderless"
            android:background="#E6E4E4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/BtnSign"
            android:text="+/-"
            android:onClick="BtnSpecialOperatorClick"
            style="Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="#E6E4E4" />
        <Button
            android:id="@+id/Btn0"
            android:text="0"
            android:onClick="BtnNumberClick"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="Widget.AppCompat.Button.Borderless"
            android:background="#F7F4F4"/>
        <Button
            android:id="@+id/BtnDecimal"
            android:text="."
            android:onClick="BtnSpecialOperatorClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="Widget.AppCompat.Button.Borderless"
            android:background="#E6E4E4"/>
        <Button
            android:id="@+id/BtnEqual"
            android:text="="
            android:onClick="BtnOperatorClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="Widget.AppCompat.Button.Borderless"
            android:background="#E6E4E4"/>
    </LinearLayout>


</LinearLayout>